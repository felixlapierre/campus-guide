<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/chooseDirections"
    style="STYLE_NO_FRAME"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:visibility="visible">

    <Button
        android:id="@+id/currentLocation"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginVertical="10dp"
        android:backgroundTint="@color/colorPrimary"
        android:drawableLeft="@drawable/ic_pin_drop_off_white_24dp"
        android:text="@string/choose_direction_current"
        android:textColor="#F0F0F0" />

    <Button
        android:id="@+id/calendar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginVertical="10dp"
        android:backgroundTint="@color/colorPrimary"
        android:drawableLeft="@drawable/ic_insert_invitation_off_white_24dp"
        android:text="@string/choose_direction_calendar"
        android:textColor="#F0F0F0" />

    <Button
        android:id="@+id/fromMap"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginVertical="10dp"
        android:backgroundTint="@color/colorPrimary"
        android:drawableLeft="@drawable/ic_touch_app_off_white_24dp"
        android:text="@string/choose_direction_map"
        android:textColor="#F0F0F0" />

    <Button
        android:id="@+id/search"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginVertical="10dp"
        android:backgroundTint="@color/colorPrimary"
        android:drawableLeft="@drawable/ic_search_off_white_24dp"
        android:text="@string/choose_direction_search"
        android:textColor="#F0F0F0" />

</LinearLayout>